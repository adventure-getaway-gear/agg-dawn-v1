{%- liquid
  assign og_title = page_title | default: shop.name
  assign og_url = canonical_url | default: request.origin
  assign og_type = 'website'
  assign og_description = page_description | default: shop.description | default: shop.name
  assign og_locale = request.locale.iso_code | replace: '-', '_'

  if request.page_type == 'product'
    assign og_type = 'product'
  elsif request.page_type == 'article'
    assign og_type = 'article'
  elsif request.page_type == 'password'
    assign og_url = request.origin
  endif

  assign share_img = nil
  if page_image
    assign share_img = page_image
  elsif shop.share_image
    assign share_img = shop.share_image
  elsif settings.logo
    assign share_img = settings.logo
  endif
%}

<meta property="og:site_name" content="{{ shop.name }}">
<meta property="og:url" content="{{ og_url }}">
<meta property="og:title" content="{{ og_title | escape }}">
<meta property="og:type" content="{{ og_type }}">
<meta property="og:description" content="{{ og_description | escape }}">
<meta property="og:locale" content="{{ og_locale }}">
{%- if localization.available_languages.size > 1 -%}
  {%- for lang in localization.available_languages -%}
    {%- assign alt_locale = lang.iso_code | replace: '-', '_' -%}
    {%- if alt_locale != og_locale -%}
<meta property="og:locale:alternate" content="{{ alt_locale }}">
    {%- endif -%}
  {%- endfor -%}
{%- endif -%}

{%- if share_img -%}
  <meta property="og:image" content="http:{{ share_img | image_url }}">
  <meta property="og:image:secure_url" content="https:{{ share_img | image_url }}">
  <meta property="og:image:width" content="{{ share_img.width }}">
  <meta property="og:image:height" content="{{ share_img.height }}">
  <meta property="og:image:alt" content="{{ og_title | escape }}">
{%- endif -%}

{%- if request.page_type == 'product' -%}
  <meta property="og:price:amount" content="{{ product.price | money_without_currency | strip_html }}">
  <meta property="og:price:currency" content="{{ cart.currency.iso_code }}">
{%- endif -%}

{%- if settings.social_twitter_link != blank -%}
  <meta name="twitter:site" content="{{ settings.social_twitter_link | split: 'twitter.com/' | last | prepend: '@' }}">
{%- endif -%}
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ og_title | escape }}">
<meta name="twitter:description" content="{{ og_description | escape }}">
{%- if share_img -%}
<meta name="twitter:image" content="https:{{ share_img | image_url }}">
{%- endif -%}

{%- comment -%} Basic robots defaults with sensible noindex cases {%- endcomment -%}
{%- liquid
  assign robots = 'index,follow'
  if request.page_type == 'search' or request.page_type == 'cart' or request.page_type == '404' or request.page_type == 'password'
    assign robots = 'noindex,nofollow'
  endif
-%}
<meta name="robots" content="{{ robots }}">
