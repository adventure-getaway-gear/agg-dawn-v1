      "default": true
    },
    {
      "type": "color",
      "id": "background_glow_color",
      "label": "Background glow color",
      "default": "#334FB4"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
