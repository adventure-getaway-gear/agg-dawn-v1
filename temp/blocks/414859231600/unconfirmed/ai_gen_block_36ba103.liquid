{% doc %}
  @prompt
    A heading with an animated glowing effect
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-glow-heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin: 0;
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-size: {{ block.settings.font_size }}px;
    line-height: 1.2;
    color: {{ block.settings.text_color }};
    text-shadow: 
      0 0 {{ block.settings.glow_blur }}px {{ block.settings.glow_color }},
      0 0 {{ block.settings.glow_blur | times: 2 }}px {{ block.settings.glow_color }},
      0 0 {{ block.settings.glow_blur | times: 3 }}px {{ block.settings.glow_color }};
    animation: ai-glow-pulse-{{ ai_gen_id }} {{ block.settings.animation_duration }}s ease-in-out infinite alternate;
    position: relative;
    display: inline-block;
    width: 100%;
  }

  @keyframes ai-glow-pulse-{{ ai_gen_id }} {
    0% {
      text-shadow: 
        0 0 {{ block.settings.glow_blur }}px {{ block.settings.glow_color }},
        0 0 {{ block.settings.glow_blur | times: 2 }}px {{ block.settings.glow_color }},
        0 0 {{ block.settings.glow_blur | times: 3 }}px {{ block.settings.glow_color }};
    }
    100% {
      text-shadow: 
        0 0 {{ block.settings.glow_blur | times: 1.5 }}px {{ block.settings.glow_color }},
        0 0 {{ block.settings.glow_blur | times: 3 }}px {{ block.settings.glow_color }},
        0 0 {{ block.settings.glow_blur | times: 4.5 }}px {{ block.settings.glow_color }};
    }
  }

  {% if block.settings.enable_background_glow %}
    .ai-glow-heading-{{ ai_gen_id }}::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 120%;
      height: 120%;
      background: radial-gradient(ellipse, {{ block.settings.background_glow_color }}40 0%, transparent 70%);
      z-index: -1;
      animation: ai-background-glow-{{ ai_gen_id }} {{ block.settings.animation_duration }}s ease-in-out infinite alternate;
      border-radius: 50%;
    }

    @keyframes ai-background-glow-{{ ai_gen_id }} {
      0% {
        opacity: 0.3;
        transform: translate(-50%, -50%) scale(1);
      }
      100% {
        opacity: 0.6;
        transform: translate(-50%, -50%) scale(1.1);
      }
    }
  {% endif %}

  @media screen and (max-width: 749px) {
    .ai-glow-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.8 }}px;
      padding: {{ block.settings.padding_top | times: 0.8 }}px {{ block.settings.padding_horizontal | times: 0.8 }}px {{ block.settings.padding_bottom | times: 0.8 }}px;
    }
  }

  @media screen and (max-width: 479px) {
    .ai-glow-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.7 }}px;
    }
  }
{% endstyle %}

<div {{ block.shopify_attributes }}>
  {% if block.settings.heading_text != blank %}
    <{{ block.settings.heading_tag }} class="ai-glow-heading-{{ ai_gen_id }}">
      {{ block.settings.heading_text }}
    </{{ block.settings.heading_tag }}>
  {% else %}
    <{{ block.settings.heading_tag }} class="ai-glow-heading-{{ ai_gen_id }}">
      Your glowing heading text
    </{{ block.settings.heading_tag }}>
  {% endif %}
</div>

