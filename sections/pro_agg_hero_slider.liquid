{% comment %}
PRO-AGG Hero Slider Section
- Fully responsive, 9-point positioning, dual CTA, mobile container, color controls, SEO/a11y, animation, and Dawn compatibility.
{% endcomment %}

{{ 'pro_agg_hero_slider.css' | asset_url | stylesheet_tag }}
{{ 'pro_agg_hero_slider.js' | asset_url | script_tag }}

<section id="pro-agg-hero-slider-{{ section.id }}"
  class="pro-agg-hero-slider"
  aria-label="{{ section.settings.accessible_label | escape }}"
  data-autoplay="{{ section.settings.autoplay }}"
  data-speed="{{ section.settings.autoplay_speed }}"
  data-transition="{{ section.settings.transition_type }}"
>
  <div class="pro-agg-hero-slider__slides">
    {% for block in section.blocks %}
      <div class="pro-agg-hero-slider__slide{% if forloop.first %} is-active{% endif %}" {{ block.shopify_attributes }}>
        {% if block.settings.image != blank %}
          <picture>
            {% if block.settings.mobile_image != blank %}
              <source media="(max-width: 749px)" srcset="{{ block.settings.mobile_image |    <img src="{{ block.settings.image | img_url: '2000x' }}" alt="{{ block.settings.image_alt | escape }}" loading="{% if forloop.first %ktop-{{ block.settings.position_desktop }} pos-mobile-{{ block.settings.position_mobile }}"
          style="color: {{ block.settings.text_color_desktop }}; --text-color-mobile: {{ block.settings.text_color_mobile }}; min-height: {{ section.settings.min_height_desktop }}vh; --min-height-mobile: {{ section.settings.min_height_mobile }}vh;">
          {% if block.settings.heading != blank %}
            <h2 class="pro-agg-hero-slider__heading">{{ block.settings.heading }}</h2>
          {% endif %}
          {% if block.settings.subheading != blank %}
            <p class="pro-agg-hero-slider__subheading">{{ block.settings.subheading }}</p>
          {% endif %}
          <div class="pro-agg-hero-slider__ctas {% if section.settings.cta_layout == 'side_by_side' %}ctas--side{% else %}ctas--stack{% endif %}">
            {% if block.settings.button_1_label != blank %}
              <a href="{{ block.settings.button_1_link }}" class="pro-agg-hero-slider__cta">{{ block.settings.button_1_label }}</ block.settings.button_2_label != blank and block.settings.show_button_2_on_mobile %}
              <a href="{{ block.settings.button_2_link }}" class="pro-agg-hero-slider__
            {% endif %}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
  {% if section.settings.show_arrows %}
    <button class="pro-agg-hero-slider__arrow pro-agg-hero-slider__arrow--prev" aria-label="Previous slide">‹</button>
    <button class="pro-agg-hero-slider__arrow pro-agg-hero-slider__arrow--next" aria-label="Next slide">›</button>
  {% endif %}
  {% if section.settings.show_dots %}
    <div class="pro-agg-hero-slider__dots">
      {% for block in section.blocks %}
        <button class="pro-agg-hero-slider__dot{% if forloop.first %} is-active{% endif %}" aria-label="Go to slide {{ forloop.index }}"></button>
      {% endfor %}
    </div>
  {% endif %}
</section>

{% schema %}
{
  "name": "PRO‑AGG Hero Slider",
  "settings": [
    { "type": "select", "id": "transition_type", "label": "Transition", "options": [
      { "value": "slide", "label": "Slide" },
      { "value": "fade", "label": "Fade" }
    ], "default": "slide" },
    { "type": "checkbox", "id": "autoplay", "label": "Autoplay", "default": true },
    { "type": "range", "id": "autoplay_speed", "label": "Autoplay speed (sec)", "min": 2, "max": 10, "step": 1, "default": 5 },
    { "type": "checkbox", "id": "show_arrows", "label": "Show arrows", "default": true },
    { "type": "checkbox", "id": "show_dots", "label": "Show dots", "default": true },
    { "type": "select", "id": "cta_layout", "label": "CTA layout", "options": [
      { "value": "side_by_side", "label": "Side by side" },
      { "value": "stacked", "label": "Stacked (mobile)" }
    ], "default": "side_by_side" },
    { "type": "range", "id": "min_height_desktop", "label": "Min height (desktop, vh)", "min": 40, "max": 100, "step": 5, "default": 60 },
    { "type": "range", "id": "min_height_mobile", "label": "Min height (mobile, vh)", "min": 30, "max": 100, "step": 5, "default": 50 },
    { "type": "text", "id": "accessible_label", "label": "Accessible label", "default": "Homepage hero slider" }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Desktop image" },
        { "type": "image_picker", "id": "mobile_image", "label": "Mobile image (optional)" },
        { "type": "text", "id": "image_alt", "label": "Alt text", "default": "" },
        { "type": "text", "id": "heading", "label": "Heading", "default": "" },
        { "type": "text", "id": "subheading", "label": "Subheading", "default": "" },
        { "type": "color", "id": "text_color_desktop", "label": "Text color (desktop)", "default": "#FFFFFF" },
        { "type": "color", "id": "text_color_mobile", "label": "Text color (mobile)", "default": "#FFFFFF" },
        { "type": "select", "id": "position_desktop", "label": "Content position (desktop)", "options": [
          { "value": "top-left", "label": "Top Left" },
          { "value": "top-center", "label": "Top Center" },
          { "value": "top-right", "label": "Top Right" },
          { "value": "middle-left", "label": "Middle Left" },
          { "value": "middle-center", "label": "Middle Center" },
          { "value": "middle-right", "label": "Middle Right" },
          { "value": "bottom-left", "label": "Bottom Left" },
          { "value": "bottom-center", "label": "Bottom Center" },
          { "value": "bottom-right", "label": "Bottom Right" }
        ], "default": "middle-center" },
        { "type": "select", "id": "position_mobile", "label": "Content position (mobile)", "options": [
          { "value": "top-left", "label": "Top Left" },
          { "value": "top-center", "label": "Top Center" },
          { "value": "top-right", "label": "Top Right" },
          { "value": "middle-left", "label": "Middle Left" },
          { "value": "middle-center", "label": "Middle Center" },
          { "value": "middle-right", "label": "Middle Right" },
          { "value": "bottom-left", "label": "Bottom Left" },
          { "value": "bottom-center", "label": "Bottom Center" },
          { "value": "bottom-right", "label": "Bottom Right" }
        ], "default": "bottom-center" },
        { "type": "text", "id": "button_1_label", "label": "CTA 1 label", "default": "" },
        { "type": "url", "id": "button_1_link", "label": "CTA 1 link", "default": "" },
        { "type": "text", "id": "button_2_label", "label": "CTA 2 label", "default": "" },
        { "type": "url", "id": "button_2_link", "label": "CTA 2 link", "default": "" },
        { "type": "checkbox", "id": "show_button_2_on_mobile", "label": "Show CTA 2 on mobile", "default": true }
      ]
    }
  ],
  "max_blocks": 8,
  "presets": [
    {
      "name": "PRO‑AGG Hero Slider",
      "blocks": [
        { "type": "slide" },
        { "type": "slide" },
        { "type": "slide" }
      ]
    }
  ]
}
{% endschema %}