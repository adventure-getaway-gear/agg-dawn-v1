{% schema %}
{
  "name": "Hero Banner AGG",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    },
    {%- comment -%} Trigger sync for Shopify {%- endcomment -%}
    {
      "type": "text",
      "id": "headline",
      "label": "Headline",
      "default": "Adventure Awaits"
    },
    {
      "type": "text",
      "id": "subheadline",
      "label": "Subheadline",
      "default": "Gear up for your next getaway"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Link"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "Shop Now"
    }
  ]
}
{% endschema %}

<section class="hero-banner-agg">
  {% if section.settings.hero_image %}
    <img src="{{ section.settings.hero_image | img_url: 'master' }}" alt="Adventure Getaway Gear Hero" />
  {% endif %}
  <h1>{{ section.settings.headline }}</h1>
  <p>{{ section.settings.subheadline }}</p>
  {% if section.settings.cta_link %}
    <a href="{{ section.settings.cta_link }}" class="btn">{{ section.settings.cta_text }}</a>
  {% endif %}
</section>
